<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="map.android.com.wcstravel.SearchTravel"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/et_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/et_return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/et_date_go"
        app:layout_constraintStart_toStartOf="@+id/et_go"
        app:layout_constraintTop_toBottomOf="@+id/et_go" />

    <EditText
        android:id="@+id/et_date_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/et_date_back"
        app:layout_constraintStart_toStartOf="@+id/et_return"
        app:layout_constraintTop_toBottomOf="@+id/et_return" />

    <EditText
        android:id="@+id/et_date_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/search"
        app:layout_constraintStart_toStartOf="@+id/et_date_go"
        app:layout_constraintTop_toBottomOf="@+id/et_date_go" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/et_date_back"
        app:layout_constraintStart_toStartOf="@+id/et_date_back"
        app:layout_constraintTop_toBottomOf="@+id/et_date_back" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/travel_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />
</android.support.constraint.ConstraintLayout>
